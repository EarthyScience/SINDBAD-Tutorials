{
  "ml_model": {
    "method": "DenseNN",
    "options": {
      "n_layers": 5,
      "n_neurons": 32,
      "k_σ": 3.0,
      "activation_out": "flux_sigmoid",
      "activation_hidden": "flux_relu"
    },
    "package": "Flux"
  },
  "ml_training": {
    "method": "MixedGradient",
    "options": {
      "batch_size": 32,
      "n_epochs": 3,
      "loss_function": "loss_model_obs_ML",
      "split_ratio": [0.2, 0.1],
      "n_folds": 10
    },
    "package": "",
    "fold_path": "./nfolds_sites_indices.jld2",
    "which_fold": 5
  },
  "ml_gradient": {
    "method": "Grad",
    "options": {
      "chunk_size": 2
    },
    "package": "FiniteDiff"
  },
  "ml_optimizer": {
    "method": "Adam",
    "options": {
      "η": 0.001,
      "β": [0.9, 0.999],
      "ϵ": 1e-8
    },
    "package": "Optimisers"
  },
  "replace_value_for_gradient": 0.0,
  "save_checkpoint": true,
  "covariates": {
    "path": "../data/CovariatesFLUXNET.zarr",
    "variables": "all"
  },

  "random_seed": 2739
}
